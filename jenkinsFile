pipeline {
	    agent any  // runs on any available agent

	    tools {
	       maven 'maven'
	    }

	    stages {
	        stage('Checkout') {
	            steps {
	                git branch: 'main',
	                    url: 'https://github.com/Neetu17/PlaywrightPOMOpenCart'
	            }
	        }

	        stage('Build') {
	            steps {
	                sh 'mvn clean install'
	            }
	        }

	        stage('Test') {
	            steps {
	                sh 'mvn test'
	            }
	        }


	    }
	}
